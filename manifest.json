{
  "manifest_version": 3,
  "name": "Formie.AI",
  "version": "1.0",
  "description": "Formie.AI helps you fill out job application forms and provides career advice.",
  "icons": {
    "16": "icons/logo16.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "options_page": "pages/options.html"
}
